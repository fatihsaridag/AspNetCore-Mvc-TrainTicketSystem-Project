@model List<Ticket>


@{
    ViewData["Title"] = "TicketList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
            <table class="table table-bordered table-striped">
                <h3 class="text text-primary text-center mt-2">Tren Rota Bilgileri</h3>
                <tr>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Nereden</th>
                    <th>Nereye</th>
                    <th>Email</th>
                    <th>Telefon Numarası</th>
                    <th>Bilet Fiyatı</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.FromWhere</td>
                        <td>@item.ToWhere</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Price</td>
                        <td><a asp-controller="Admin" asp-action="TicketEdit" asp-route-id="@item.TicketId" class="btn btn-outline-info">Düzenle</a></td>
                        <td><a asp-controller="Admin" asp-action="TicketDelete" asp-route-id="@item.TicketId" class="btn btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </table>

        </div>
        <div class="col-md-1">
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-4"> </div>
        <div class="col-md-4">
            <h3 class="text-success text-center">Bilet Oluştur</h3>
            <a asp-controller="Admin" asp-action="TicketAdd" class="btn btn-primary form-control">Ekle</a>
        </div>
        <div class="col-md-4"></div>

        
    </div>

</div>

