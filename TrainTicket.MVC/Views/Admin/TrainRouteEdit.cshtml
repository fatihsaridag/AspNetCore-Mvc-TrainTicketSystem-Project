@model TrainTicket.MVC.Models.TrainRouteEditViewModel

@{
    ViewData["Title"] = "TrainRouteEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>Tren Bileti Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TrainRouteEdit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="RouteId" class="form-control" />
            </div>
            <div class="form-group">
                <select class="form-select form-select-lg mb-3" asp-for="StartRo" asp-items="@ViewBag.Cities" style="width: 300px; height:50px;">
                    <option selected disabled>Başlangıç Rotası</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-select form-select-lg mb-3" asp-for="Ro1" asp-items="@ViewBag.Cities" style="width: 300px; height:50px;">
                    <option selected disabled>Rota 1</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-select form-select-lg mb-3" asp-for="Ro2" asp-items="@ViewBag.Cities" style="width: 300px; height:50px;">
                    <option selected disabled>Rota 2</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-select form-select-lg mb-3" asp-for="Ro3" asp-items="@ViewBag.Cities" style="width: 300px; height:50px;">
                    <option selected disabled>Rota 3</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-select form-select-lg mb-3" asp-for="FinishRo" asp-items="@ViewBag.Cities" style="width: 300px; height:50px;">
                    <option selected disabled>Bitiş Rotası</option>
                </select>
            </div>
            <div class="form-group">
                <input asp-for="Time" class="form-control" style="width:300px; height:50px;" placeholder="Tarih" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">

                <input asp-for="Clock" class="form-control" style="width:300px; height:50px;" placeholder="Saat" />
                <span asp-validation-for="Clock" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">

                <input type="file" asp-for="Image" class="form-control" style="width:300px; height:50px;" placeholder="Resim" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group  mt-2">
                <input asp-for="Price" class="form-control" style="width:300px; height:50px;" placeholder="Fiyat" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


