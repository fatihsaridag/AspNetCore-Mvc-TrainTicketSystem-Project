@model UserViewModel


@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card mt-3" style="width: 30rem;">
            <div class="card-body">
                <h5 class="card-title text-primary">Kullanıcı Bilgileri</h5>
                <p class="card-text">Kullanıcı Adı : @Model.UserName</p>
                <p class="card-text">Kullanıcı Email : @Model.Email</p>
                <p class="card-text"> Kullaıcı Telefon : @Model.PhoneNumber</p>
            </div>
            <div class="card-body">
                <a  class="card-link btn btn-outline-info" asp-controller="Admin" asp-action="UserEdit" >Bilgileri Düzenle</a>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
