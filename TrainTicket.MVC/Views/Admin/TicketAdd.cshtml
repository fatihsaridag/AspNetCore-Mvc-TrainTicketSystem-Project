@model TrainTicket.MVC.Models.TicketAddViewModel

@{
    ViewData["Title"] = "TicketAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="text-primary">Bilet Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TicketAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromWhere" class="control-label"></label>
                <input asp-for="FromWhere" class="form-control" />
                <span asp-validation-for="FromWhere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToWhere" class="control-label"></label>
                <input asp-for="ToWhere" class="form-control" />
                <span asp-validation-for="ToWhere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainRouteId" class="control-label"></label>
                <input asp-for="TrainRouteId" class="form-control" />
                <span asp-validation-for="TrainRouteId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


