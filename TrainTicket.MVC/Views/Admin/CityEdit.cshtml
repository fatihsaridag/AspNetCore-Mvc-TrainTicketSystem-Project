@model TrainTicket.MVC.Models.CityEditViewModel

@{
    ViewData["Title"] = "CityEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>Şehir Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CityEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="CityId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
